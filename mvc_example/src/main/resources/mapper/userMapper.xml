<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mvc_example.mapper.UserMapper">
  <!-- 회원가입용, 중복된 아이디 조회-->
  <select id="checkDuplicatedUser" parameterType="String" resultType="Integer">
    SELECT * FROM mvc_user WHERE USERID = #{userId}
  </select>

  <!-- 회원가입용, 계정 등록 -->
  <insert id="enrollUser" parameterType="UserVo">w
    INSERT INTO mvc_user (USERID, USERPASSWORD)
            VALUES (#{userId}, #{userPw})
  </insert>

  <!-- 로그인용, 패스워드까지 조회 -->
  <select id="loginUser" parameterType="UserVo" resultType="UserVo">
    SELECT (USERID), (USERPASSWORD) FROM mvc_user WHERE (USERID) = #{userId} AND (USERPASSWORD) = #{userPw}
  </select>
</mapper>
